<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChangeThemeColor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomCheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/test_checkbox</item>
    </style>
    <style name="Aptheme.Red" parent="Theme.ChangeThemeColor">
        <item name="colorPrimary">@color/ColorPrimary_R</item>
        <item name="colorPrimaryVariant">@color/ColorServe_R</item>
    </style>

    <style name="Aptheme.Yellow" parent="Theme.ChangeThemeColor">
        <item name="colorPrimary">@color/ColorPrimary_Y</item>
        <item name="colorPrimaryVariant">@color/ColorServe_Y</item>
    </style>

    <style name="Aptheme.Green" parent="Theme.ChangeThemeColor">
        <item name="colorPrimary">@color/ColorPrimary_G</item>
        <item name="colorPrimaryVariant">@color/ColorServe_G</item>
    </style>

    <style name="Aptheme.Blue" parent="Theme.ChangeThemeColor">
        <item name="colorPrimary">@color/ColorPrimary_B</item>
        <item name="colorPrimaryVariant">@color/ColorServe_B</item>
    </style>
</resources>